{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <section class="articles">
        {% for article in articles %}
            <article>
                <h2>{{ article.title }}</h2>
                <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/y') }} Ã  {{ article.createdAt | date('H:i') }} dans la categorie {{article.category.title}}</div>
                <div class="content"><img src="{{ article.image }}" alt="">
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolor ea nemo porro temporibus tenetur veniam!</p>
                    <p>{{ article.content | raw }}</p>
                    <a href="{{ path('blog_show', {'id':article.id}) }}" class="btn btn-primary">Lire la suite</a></div>
            </article>
        {% endfor %}
    </section>
{% endblock %}
