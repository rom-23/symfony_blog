{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">

        {{ form_start(form) }}
        {{ form_errors(form.title) }}
        <div class="form-group">
            {{ form_widget(form.title,{'attr':{'placeholder':"Titre l'article" }}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.category) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.content,{'attr':{'placeholder':"Contenu de l'article" }}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.image,{'attr':{'placeholder':"Url de l'image" }}) }}
        </div>
        <div class="row">
            <button class="btn btn-success">
                {% if editMode %}
                    Enregistrer les modifications
                {% else %}
                    Ajouter l'article
                {% endif %}
            </button>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}

{% block title %}

{% endblock %}

